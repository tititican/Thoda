<% unless flash.empty?  %>
    <section class="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
    </section>
<% end %>

