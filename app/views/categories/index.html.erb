<h1>categories</h1>
<ul class="nav nav-tabs">
  <li class="active">
    <a href="#">Index</a>
  </li>
  <li><%= link_to 'New Category', new_category_path %></li>
</ul>
<table class="table table-striped table-hover">  
  <thead>  
    <tr>  
      <th>#</th>  
      <th>Name</th>  
      <th>Created at</th>  
      <th></th>  
    </tr>  
  </thead>  
  <tbody>  
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= category.created_at %></td>
        <td><%= link_to 'Show', category %> | <%= link_to 'Edit', edit_category_path(category) %> | <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>  
    <% end %>
  </tbody>  
</table>  




