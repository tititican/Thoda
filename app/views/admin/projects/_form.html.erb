<div class="container">
<%= form_for [:admin, @project], :html => { :class => "well form-horizontal" } do |f| %>
  <% if @project.errors.any? %>
    <div class="alert">
      <%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:
      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend>Please input project details: 
      <%= link_to 'Back', projects_path, :class => 'btn pull-right' %>
    </legend>
  <div class="control-group">
    <%= f.label :name, "Projects Name:", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name, :class => "input-xxlarge", :placeholder => "required project name" %>
    </div>
  </div>
  
   <div class="control-group">
    <%= f.label :category_id, "Category:", class: "control-label" %>
    <div class="controls">
      <%= f.collection_select :category_id, Category.order(:name), :id, :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :tag_list, "Tags:", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :tag_list, :class => "input-xxlarge", :placeholder => "seprated by comas" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :owner, "Project's Owner:", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :owner, :class => "input-xxlarge", :placeholder => "project's owner name" %>
    </div>
  </div>

 <div class="control-group">
    <%= f.label :nationality, "Nationality:", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :nationality, :class => "input-xxlarge", :placeholder => "Nationality" %>
    </div>
  </div>

<div class="control-group">
    <%= f.label :featured, "Featured:", class: "control-label" %>
    <div class="controls">
      <label class="checkbox">
        <%= f.check_box :featured %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :location, "Location:", class: "control-label" %>
    <div class="controls">
     <%= f.text_field :location, :class => "input-xxlarge" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :year, "Year of built:", class: "control-label" %>
    <div class="controls">
      <%= f.select :year, (2005..2020), {:selected => 2013}, { :class => "span3" } %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :desciption, "Project description:", class: "control-label" %>
    <div class="controls">
      <%= f.text_area :desciption, :class => "input-xxlarge wysihtml5", :placeholder => "required field", :rows => "10" %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Save And Insert Image", :class => "btn btn-primary"%>
    <%= link_to 'Cancel', projects_path, :class => 'btn' %>
  </div>
  </fieldset>
<% end %>
</div>

<script type="text/javascript">
  $('.wysihtml5').each(function(i, elem) {
    $(elem).wysihtml5();
  });
</script>


