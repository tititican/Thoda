<div class="container">
<%= form_for @page, :html => { :class => "well form-horizontal" }  do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>
      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend>Please input page details: </legend>
    <div class="control-group">
      <%= f.label :name, "Name:", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name, :class => "input-xxlarge" %>
      </div>
    </div>
     <div class="control-group">
      <%= f.label :parent_id, "Root page:", class: "control-label"%>
      <div class="controls">
        <%= f.collection_select :parent_id, Page.arrange_as_array({:order => 'name'}),
                                :id, :name_for_selects, :include_blank => true%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :content, "Content:", class: "control-label" %>
      <div class="controls">
        <%= f.text_area :content, :class => "wysihtml5 input-xxlarge" %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Save", :class => "btn btn-primary" %>
    </div>
</fieldset>
<% end %>
</div>

<script type="text/javascript">
  $('.wysihtml5').each(function(i, elem) {
    $(elem).wysihtml5();
  });
</script>

